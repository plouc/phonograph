.masters
  &__list
    @extend .list
    &__item
      @extend .list__item
      min-height 56px
      padding-left 66px

      &__name
        display block
        margin-bottom 3px
        font-weight 700

      &__picture
        width  56px
        height 56px

        position absolute

        top  0
        left 0

        img
          max-width  100%
          max-height 100%

.master__header
  background darken(#f4ca78, 10%)
  &__container
    position relative
    min-height 150px
    padding 15px 0 15px 135px
    @extend .container

  &__picture
    position absolute

    top  15px
    left 0

    width  120px
    height 120px

    overflow hidden

    img
      max-width  100%
      max-height 100%